<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:background="@color/light_cyan"
    android:layout_height="wrap_content">


    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:orientation="horizontal"

        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/service_name"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:textSize="17dp"
            android:background="@color/black"
            android:textColor="@color/white"
            android:padding="10dp"
            android:gravity="start"
            android:fontFamily="@font/font_heavy"
            android:text="שם השירות" />
    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/duration"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:paddingHorizontal="10dp"
            android:fontFamily="@font/font_heavy"
            android:gravity="start"
            android:text="משך השירות"
            android:textColor="@color/black"
            android:textSize="15dp" />


        <TextView
            android:id="@+id/service_price"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:paddingHorizontal="10dp"
            android:fontFamily="@font/font_heavy"
            android:gravity="start"
            android:text="מחיר"
            android:textColor="@color/black"
            android:textSize="15dp" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:layout_height="wrap_content">


        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/delete_service"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:textColor="@color/white"
            android:fontFamily="@font/font_heavy"
            android:background="@color/orange_red"
            android:text="מחק שירות" />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/edit_service"
            android:fontFamily="@font/extrabbold"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="0.7"
            android:background="@color/sky_blue"
            android:text="ערוך שירות" />
    </LinearLayout>

</LinearLayout>